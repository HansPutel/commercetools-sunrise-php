{
  "name": "commercetools/sunrise",
  "description": "Commercetools Sunrise PHP template shop",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/sphereio/commercetools-sunrise-php",
  "support": {
    "email": "support@sphere.io",
    "forum": "http://support.sphere.io",
    "issues": "https://github.com/sphereio/commercetools-sunrise-php/issues"
  },
  "require": {
    "php": ">=5.6",
    "ext-apcu": "*",
    "ext-mbstring": "*",
    "commercetools/php-sdk": "dev-develop",
    "commercetools/sunrise-design": "*",
    "commercetools/commons": "^0.1",
    "symfony/symfony": "^3.0",
    "jays-de/handlebars-bundle": "^0.2",
    "symfony/config": "^3.0",
    "symfony/yaml": "^3.0",
    "symfony/translation": "*",
    "monolog/monolog": "^1.7",
    "sensio/framework-extra-bundle": "^3.0",
    "symfony/monolog-bundle": "^2.8",
    "incenteev/composer-parameter-handler": "^2.0"
  },
  "require-dev": {
    "commercetools/sunrise-scenarios": "dev-behat",
    "behat/mink": "^1.6@dev",
    "behat/behat": "^3.0@beta",
    "behat/mink-extension": "^2.0@dev",
    "behat/mink-selenium2-driver": "^1.2@dev",
    "heroku/heroku-buildpack-php": "*",
    "phpunit/phpunit": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "Commercetools\\Sunrise\\": ["src/"]
    }
  },
  "autoload-dev": {
    "psr-4": {"Commercetools\\Sunrise\\": ["tests/unit/", "tests/integration/", "tests/behat/"]}
  },
  "scripts": {
    "assetInstall": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "cp -rf vendor/commercetools/sunrise-design/assets web/",
      "php app/console.php assets:install web/assets"
    ],
    "post-update-cmd": "@assetInstall",
    "post-install-cmd": "@assetInstall"
  },
  "extra": {
    "incenteev-parameters": [
      {
        "file": "app/config/parameters.yml",
        "env-map": {
          "secret": "SECRET_TOKEN",
          "commercetools.client_id": "SPHERE_CLIENT_ID",
          "commercetools.client_secret": "SPHERE_CLIENT_SECRET",
          "commercetools.project": "SPHERE_PROJECT"
        }
      }
    ]
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "commercetools/sunrise-design",
        "version": "0.51.0",
        "dist": {
          "url": "https://github.com/sphereio/commercetools-sunrise-design/archive/de639179c73e5b123786efdae3dc6eb2460e2205.zip",
          "type": "zip",
          "reference": "de639179c73e5b123786efdae3dc6eb2460e2205"
        },
        "source": {
          "url": "https://github.com/sphereio/commercetools-sunrise-design",
          "type": "git",
          "reference": "de639179c73e5b123786efdae3dc6eb2460e2205"
        }
      }
    },
    {
      "type": "vcs",
      "url": "https://github.com/sphereio/sphere-sunrise-scenarios"
    },
    {
      "type": "vcs",
      "url": "https://github.com/sphereio/commercetools-php-commons"
    }
  ]
}
