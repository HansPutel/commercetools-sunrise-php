<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="handlebars.class">Commercetools\Sunrise\HandlebarsBundle\HandlebarsEnvironment</parameter>
        <parameter key="handlebars.loader.filesystem.class">Commercetools\Sunrise\HandlebarsBundle\Loader\FilesystemLoader</parameter>
        <parameter key="templating.engine.handlebars.class">Commercetools\Sunrise\HandlebarsBundle\HandlebarsEngine</parameter>
        <parameter key="handlebars.cache_warmer.class">Commercetools\Sunrise\HandlebarsBundle\CacheWarmer\HandlebarsCacheWarmer</parameter>
    </parameters>
    <services>
        <service id="handlebars" class="%handlebars.class%">
            <argument type="service" id="handlebars.loader" />
            <argument type="service" id="handlebars.helper" />
            <argument />
        </service>
        <service id="handlebars.template.paths" class="Commercetools\Sunrise\HandlebarsBundle\Loader\FilesystemLoader">
            <factory service="handlebars.loader.filesystem" method="getPaths" />
        </service>
        <service id="handlebars.template.finder" class="Commercetools\Sunrise\HandlebarsBundle\CacheWarmer\TemplateFinder">
            <argument type="service" id="templating.name_parser" />
            <argument type="service" id="handlebars.template.paths" />
        </service>
        <service id="handlebars.loader" alias="handlebars.loader.filesystem" />
        <service id="handlebars.loader.filesystem" class="%handlebars.loader.filesystem.class%">
        </service>
        <service id="handlebars.cache_warmer" class="%handlebars.cache_warmer.class%" public="false">
            <tag name="kernel.cache_warmer" />
            <argument type="service" id="service_container" />
            <argument type="service" id="handlebars.template.finder" />
        </service>
        <service id="templating.engine.handlebars" class="%templating.engine.handlebars.class%" public="false">
            <argument type="service" id="handlebars"/>
            <argument type="service" id="templating.name_parser"/>
            <argument type="service" id="templating.locator" />
            <tag name="templating.engine" />
        </service>
        <service id="handlebars.helper" class="Commercetools\Sunrise\HandlebarsBundle\HandlebarsHelper">
            <argument type="service" id="translator" />
        </service>
    </services>
</container>
